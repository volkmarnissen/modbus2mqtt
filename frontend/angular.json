{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "modbus2mqtt": {
      "projectType": "application",
      "schematics": {},
      "root": ".",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "baseHref": "./",
            "outputPath": "../dist/frontend",
            "localize": true,
            "index": "src/index.html",
            "polyfills": ["@angular/localize/init"],
            "tsConfig": "tsconfig.angular.json",
            "assets": ["src/assets/images", "src/assets"],
            "styles": ["src/styles.css"],
            "scripts": [],
            "preserveSymlinks": true,
            "allowedCommonJsDependencies": [],
            "browser": "src/main.ts"
          },
          "configurations": {
            "production": {
              "budgets": [
                { "type": "initial", "maximumWarning": "2mb", "maximumError": "3mb" },
                { "type": "anyComponentStyle", "maximumWarning": "2kb", "maximumError": "4kb" }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "proxyConfig": "proxy.conf.3000.json"
          },
          "configurations": {
            "3005": {
              "buildTarget": "modbus2mqtt:build:development",
              "proxyConfig": "proxy.conf.3005.json"
            },
            "production": { "buildTarget": "modbus2mqtt:build:production" },
            "development": { "buildTarget": "modbus2mqtt:build:development" }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": { "buildTarget": "modbus2mqtt:build" }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "css",
            "assets": [{ "glob": "**/*", "input": "src/assets" }],
            "styles": ["src/styles.css"],
            "scripts": []
          }
        }
      }
    }
  },
  "cli": { "analytics": false }
}
