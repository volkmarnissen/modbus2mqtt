{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist/server",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "noImplicitAny": false,
    "paths": {
      "@server/*": ["src/server/*"],
      "@server/*.mjs": ["src/server/*.mts"],
      "@shared/server.mjs": ["src/shared/server/index.ts"],
      "@shared/specification.mjs": ["src/shared/specification/index.ts"],
      "@shared/*": ["src/shared/*"],
      "@spec/index.mjs": ["src/specification/index.ts"],
      "@spec/*": ["src/specification/*"]
    }
  },
  "include": ["src/server", "src/shared", "src/specification", "src/types"],
  "exclude": ["dist", "src/angular"]
}
